CREATE TABLE users (
    id INT NOT NULL AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,     
    email VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    confirmPassword VARCHAR(255) NOT NULL,
    phone VARCHAR(10),
    photo VARCHAR(255), 
    PRIMARY KEY(id)
);

CREATE TABLE stocks (
     id INT NOT NULL AUTO_INCREMENT,
     stockName VARCHAR(255),     
     shares INT,
     currPrice INT,
     leftOff INT,
     PRIMARY KEY(id)
);

CREATE TABLE portfolio (
	id INT NOT NULL AUTO_INCREMENT,
	userId INT NOT NULL,     
	stockId INT NOT NULL,
    totalShares INT,
    gain INT,
    loss INT,
    PRIMARY KEY(`id`),
    FOREIGN KEY fk_users(userId)
    REFERENCES users(id),
    FOREIGN KEY fk_stocks(stockId)
    REFERENCES stocks(id)
);

CREATE TABLE bid (
    id INT NOT NULL AUTO_INCREMENT,
    userId INT NOT NULL,     
	stockId INT NOT NULL,
	bidPrice INT,
	shares INT,
	PRIMARY KEY(`id`),
	FOREIGN KEY fk_users(userId)
    REFERENCES users(id)
);

CREATE TABLE offers (
    id INT NOT NULL AUTO_INCREMENT,
    userId INT NOT NULL,     
	stockId INT NOT NULL,
	offerPrice INT,
	shares INT,
	PRIMARY KEY(`id`),
	FOREIGN KEY fk_users(userId)
    REFERENCES users(id)
);

CREATE TABLE transaction (
    id INT NOT NULL AUTO_INCREMENT,
    buyerId INT NOT NULL,     
	sellerId INT NOT NULL,
	Price INT,
	shares INT,
	PRIMARY KEY(`id`),
	FOREIGN KEY fk_buyer(buyerId)
    REFERENCES users(id),
    FOREIGN KEY fk_seller(sellerId)
    REFERENCES users(id)
);
